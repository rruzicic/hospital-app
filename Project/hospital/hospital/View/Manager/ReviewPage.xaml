            </Button.Template>
        </Button>
        <Button Content="Doctor review" Command="{Binding DoctorReviewCommand}" HorizontalAlignment="Left" Margin="335,105,0,0" VerticalAlignment="Top" Height="52" Width="182" FontSize="18" />
