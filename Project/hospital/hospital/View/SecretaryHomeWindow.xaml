<Window x:Class="hospital.View.SecretaryHomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:hospital.View"
        mc:Ignorable="d"
        Title="SecretaryHomeWindow" Height="600" Width="1000">
    <Grid>
        <Border CornerRadius="8" Width="50"  HorizontalAlignment="Left"  BorderBrush="Gray" Background="LightGray" BorderThickness="2" Margin="0,50,0,2">
            <StackPanel Orientation="Vertical" Height="515" Width="50" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,0,-4,-2">
                <Button Width="35" Click="Button_Click" Margin="5" BorderBrush="Transparent">
                    <Image Source="../Resources/Images/group_50x50.png"></Image>
                </Button>
                <Button Width="35" Click="btnHandMedRecord_Click" Margin="5" BorderBrush="Transparent">
                    <Image Source="../Resources/Images/medical-records_1_50x50.png"></Image>
                </Button>
            </StackPanel>
        </Border>
        <Frame x:Name="Main" Margin="50,50,0,0" NavigationUIVisibility="Hidden" />
    </Grid>
</Window>
