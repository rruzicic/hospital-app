<Page x:Class="hospital.View.EquipmentPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hospital.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EquipmentPage">

    <Grid Background="white">
        <DataGrid HorizontalAlignment="Left" Height="256" Margin="94,114,0,0" VerticalAlignment="Top" Width="289" RenderTransformOrigin="0.507,0.146">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Type" Width="130"/>
                <DataGridTextColumn Header="Quantity" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="Equipment" HorizontalAlignment="Left" Margin="94,62,0,0" VerticalAlignment="Top" Width="153" FontSize="28px"/>
        <Button Content="Add new equipment" HorizontalAlignment="Left" Margin="509,135,0,0" VerticalAlignment="Top" Width="150" Height="43"/>
        <Button Content="Order equipment" HorizontalAlignment="Left" Margin="509,214,0,0" VerticalAlignment="Top" Width="150" Height="43"/>
        <Button Content="Schedule relocation" HorizontalAlignment="Left" Margin="509,292,0,0" VerticalAlignment="Top" Width="150" Height="43" Click="Show_Relocation_Window_Click"/>
    </Grid>
</Page>
