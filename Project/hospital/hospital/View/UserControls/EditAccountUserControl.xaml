<UserControl x:Class="hospital.View.UserControls.EditAccountUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:hospital.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White" Width="250" Height="300">
        <Label Content="Firstname" HorizontalAlignment="Left" Margin="22,41,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Margin="102,47,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Margin="180,270,0,0" VerticalAlignment="Top" Click="btnSubmit_Click"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Margin="20,270,0,0" VerticalAlignment="Top" Click="btnCancel_Click"/>
        <Label Content="Surname" HorizontalAlignment="Left" Margin="24,72,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtSurname" HorizontalAlignment="Left" Margin="102,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="24,104,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtUsername" HorizontalAlignment="Left" Margin="102,108,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="24,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtEmail" HorizontalAlignment="Left" Margin="102,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="ID" HorizontalAlignment="Left" Margin="24,168,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Margin="102,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Phone" HorizontalAlignment="Left" Margin="24,200,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Margin="102,204,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" TextChanged="TextBox_TextChanged"/>
        <Label Content="Create account" HorizontalAlignment="Center" Margin="0,7,0,0" VerticalAlignment="Top" FontSize="18"/>
        <TextBlock x:Name="errFirstname" HorizontalAlignment="Left" Margin="102,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="13" Foreground="#FFF70C0C"/>
        <TextBlock x:Name="errSurname" HorizontalAlignment="Left" Margin="102,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="13" Foreground="#FFF70C0C"/>
        <TextBlock x:Name="errUsername" HorizontalAlignment="Left" Margin="102,125,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="13" Foreground="#FFF70C0C"/>
        <TextBlock x:Name="errEmail" HorizontalAlignment="Left" Margin="102,156,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="13" Foreground="#FFF70C0C"/>
        <TextBlock x:Name="errId" HorizontalAlignment="Left" Margin="102,187,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="13" Foreground="#FFF70C0C"/>
        <TextBlock x:Name="errPhone" HorizontalAlignment="Left" Margin="102,218,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="134" Height="13" Foreground="#FFF70C0C"/>
        <Label Content="Date of Birh" HorizontalAlignment="Left" Margin="22,234,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="datePicker" HorizontalAlignment="Left" Margin="102,234,0,0" VerticalAlignment="Top" Width="120" Height="24"/>
    </Grid>
</UserControl>
