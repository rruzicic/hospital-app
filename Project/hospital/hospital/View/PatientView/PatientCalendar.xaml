<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hospital.View.PatientView"
      xmlns:syncfusion="http://schemas.syncfusion.com/wpf" x:Class="hospital.View.PatientView.PatientCalendar"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PatientCalendar">

    <Grid>

        <syncfusion:SfScheduler x:Name="appointmentCalendar" HorizontalAlignment="Left" Margin="10,10,0,0" ViewType="Week" VerticalAlignment="Top" Height="430" Width="780" AllowedViewTypes="Month">
            <syncfusion:SfScheduler.MonthViewSettings>
                <syncfusion:MonthViewSettings AppointmentDisplayMode="Indicator"    
                                      AppointmentDisplayCount="10"/>
            </syncfusion:SfScheduler.MonthViewSettings>
        </syncfusion:SfScheduler>
    </Grid>
</Page>
